@{
    ViewData["Title"] = "Authours";
}
@model IEnumerable<Author>

<div style=" display: flex; flex-direction:column ; width: 100%; background-color: whitesmoke;  ">
    <div style="display: flex; justify-content:space-between ;">
        <h1>
            Authours
        </h1>
        <a asp-action="create" asp-controller="Authors"> Add </a>
    </div>
    @if (!Model.Any())
    {
        <div>
            no Categories available
        </div>
    }
    else
    {
        <table>
            <tr>
                <th>ID</th>
                <th>name</th>
                <th>created on</th>
                <th>updaeted in </th>
                <th>deleted</th>
                <th>Action</th>


            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.CreatedAt.ToString()</td>
                    <td>@item.UpdatedAt?.ToString()</td>
                    <td>@(item.IsDeleted ? "Deleted" : "Avilable")</td>
                    <td>
                        <a asp-controller="Authors" asp-action="Edit" asp-route-Id="@item.ID"> Edit</a>
                    </td>
                </tr>
            }
        </table>
    }

</div>