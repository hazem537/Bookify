@model List<Book>;
@{
    ViewData["title"] = "Book" ;
}

<div style=" display: flex; flex-direction:column ; width: 100%; background-color: whitesmoke;  ">
    <div style="display: flex; justify-content:space-between ;">
        <h1>
            Books
        </h1>
        <a asp-action="create" asp-controller="Books"> Add </a>
    </div>
    @if (!Model.Any())
    {
        <div>
            no Categories available
        </div>
    }
    else
    {
        <table>
            <tr>
                <th>ID</th>
                <th>Title</th>
                @* <th>created on</th>
                <th>updaeted in </th>
                <th>deleted</th>
                <th>Action</th> *@


            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    @* <td>@item.CreatedAt.ToString()</td>
                    <td>@item.UpdatedAt?.ToString()</td>
                    <td>@(item.IsDeleted ? "Deleted" : "Avilable")</td> *@
                    <td>
                        <a asp-controller="Books" asp-action="Edit" asp-route-Id="@item.Id"> Edit</a>
                    </td>
                              <td>
                        <a asp-controller="Books" asp-action="Details" asp-route-Id="@item.Id"> Preview</a>
                    </td>
                </tr>
            }
        </table>
    }

</div>